// Online C++ compiler to run C++ program online
#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;
int main() {
    float pi=0.00, num, sign;
    int term=1000;
    cout<<"Term:"<<setw(10)<<"Value:"<<endl;
    for(int i =1; i<=term; i++){
        num = (2*i) - 1;
        sign = pow(-1, i+1);
        pi = pi + (sign*(4.00/num));
        cout<<setw(4)<<i<<setw(10)<<pi<<endl;
    }

    return 0;
}

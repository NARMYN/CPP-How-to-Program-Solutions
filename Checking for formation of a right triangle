#include <iostream>
using namespace std;
int main () {
    int side1, side2, side3, largnum;
    cout << "Enter the size of the first side.\n";
    cin >> side1;
    cout << "Enter the size of the second side.\n";
    cin >> side2;
    cout << "Enter the size of the second side.\n";
    cin >> side3;
    if ((side1*side1) + (side2*side2) == (side3*side3)){
        cout << "The three numbers represent sides of a right angled triangle.\n";
    } else if ((side1*side1) + (side3*side3) == (side2*side2)){
         cout << "The three numbers represent sides of a right angled triangle.\n";
    } else if ((side2*side2) + (side3*side3) == (side1*side1)){
         cout << "The three numbers represent sides of a right angled triangle.\n";
    } else {
        cout << "The three numbers do not represent the sides of  right triangle.\n";
    }
    
	return 0;
}

#include <iostream>
using namespace std;
int main() {
    int size;
    cout<< "Enter the size of the side of the square.\n";
    cin >> size;
    for (int count1 = 1; count1<= size; count1++){
        if (count1 == 1 or count1 == size){
            for (int count2 = 1; count2 <= size; count2++){
                cout << "*";
            }
        } else {
            for (int count3= 1; count3 <= size; count3++){
                if (count3 == 1 or count3 == size){
                    cout<< "*";
                }else {
                    cout << " ";
                }
            }
        }
        cout << "\n";
    }
    return 0;
}

#include <iostream>
using namespace std;
int main() {
    int days=0, days1=0, months=0, years=0;
    cout << "Enter the number of days.\n ";
    cin >> days;
    if (days >= 365){
        years = days/ 365;
    }
    days = days%365;
    if (days >= 30 ){
        months = days / 30;
    }
    days = days%30;
    if (days >= 1){
       days1= days;
    }
    cout << "your days have:\n ";
    cout << years << "years\n";
    cout << months << "months\n";
    cout << days1 << "days\n";
    return 0;
}

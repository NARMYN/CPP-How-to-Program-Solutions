//  Write a program to check whether a triangle is valid or not, when the three angles of the triangle are entered by the user. A triangle is valid if the sum of all the three angles is equal to 180 degrees 
#include <iostream>
using namespace std;
int main() {
    double a,b,c,sum ;
    cout<< "Enter the first angle.\n";
    cin >> a;
    cout << "Enter the second angle.\n";
    cin >> b;
    cout << "Enter the third angle. \n";
    cin >> c;
    sum = a+b+c;
    if ( sum == 180){
        cout << "A triangle is valid.\n";
    } else { cout<< "The triangle is not valid.\n";}
    return 0;
}

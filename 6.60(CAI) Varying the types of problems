// Online C++ compiler to run C++ program online
#include <iostream>

using namespace std;
double correctans(int c, int d, int typ);
void question(int a, int b, int typ_e);
void goodresponse();
void badresponse();
int diff_level(int a);
int main() {
    srand(time(0));
    int num, answer, x, y, goodcount=0, badcount=0, count, difficulty, nodigspec, pblmtype;
    bool cont= true;
    double percent;
    while(cont ==true){
        do{
            cout<<"Please enter the Type of problem. '1' for Addition, '2' for subtraction, '3' for Multiplication, '4' for division, '5' for Mixed\n";
            cin>> pblmtype;
        } while(pblmtype<0 and pblmtype>6);
        cout<<"Please enter the difficulty level\n";
        cin>>difficulty;
        nodigspec= diff_level(difficulty);
        do{
            x= rand()%nodigspec;
            y= rand()%nodigspec;
            answer = correctans(x, y, pblmtype);
            question(x, y, pblmtype);
            cin>> num;
            while(num != answer){
                badcount = badcount +1;
                badresponse();
                question(x, y, pblmtype);
                cin>>num;
            }
            goodresponse();
            goodcount = goodcount+1;
            count = goodcount + badcount;
            
        }while(count<10);
        if((10*goodcount)<75){
            cout<<"Please ask your teacher for extra help!\n";
        }else cout<<"Congratulations! your ready to go to another level\n";
        
    }
    
    return 0;
}
double correctans(int c, int d, int typ){
    int ans;
    if(typ==5){
        typ = rand()%4 + 1;
    }
    switch(typ){
        case 1:
            ans = c+d;
            break;
        case 2:
            if(c>d){
                ans = c-d;
            }else ans = d-c;
            break;
        case 3:
            ans = c*d;
            break;
        case 4:
            ans = d/c;
            break;
    }
    return ans;
}
void question(int a, int b, int typ_e){
    if(typ_e==5){
        typ_e = rand()%4 + 1;
    }
    switch(typ_e){
        case 1:
            cout<<"How much is "<<a<<" added to "<<b<<" ?"<<endl;
            break;
        case 2:
            cout<<"What is the difference of "<<a<<" and "<<b<<endl;
            break;
        case 3:
            cout<<"How much is "<<a<<" times "<<b<<" ?"<<endl;
            break;
        case 4:
            cout<<"How much is "<<a<<" divided by "<<b<<" ?"<<endl;
            break;
    }
}
void goodresponse(){
    int a;
    a = rand()%4 +1;
    switch(a){
        case 1:
            cout<<"Very Good!"<< endl;
            break;
        case 2:
            cout<<"Excellent!"<< endl;
            break;
        case 3:
            cout<<"Nice Work!"<< endl;
            break;
        case 4:
            cout<<"Keep up the good work!"<< endl;
            break;
    }
}
void badresponse(){
    int a = rand()%4 +1;
    switch(a){
        case 1:
            cout<<"No. Please Try Again!"<<endl;
            break;
        case 2:
            cout<<"Wrong. Try Once More."<<endl;
            break;
        case 3:
            cout<<"Don't give up!"<<endl;
            break;
        case 4:
            cout<<"No. Keep Trying"<<endl;
            break;
    }
}
int diff_level(int a){
    int num = 10;
    for(int i =0; i<a; i++){
        num = num *10;
    }
    return num;
}

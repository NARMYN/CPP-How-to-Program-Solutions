//4. Write a C++ program to find the most occurring element in an array of integers.

#include <iostream>
using namespace std;
int main() {
    int max_count=0, n;
    int num[10]= {3,45,34,12,23,44,3,3,43,34};
    for (int i =0; i<10; i++){
        int count = 0;
        for(int j=0; j<10; j++){
            if (num[i]==num[j]){
                count = count + 1;
            }
        }
        if (max_count< count){
            max_count = count;
            n = num[i];
        }
        
    }
    cout<< max_count<<":"<<n;
    return 0;
}

//5. Write a C++ program to reverse elements of the array using single array

#include <iostream>
using namespace std;
int main() {
    int num[6]= {3,45,34,12,23,44};
    for (int i =0; i<6; i++){
        num[i]=num[5-i];
    }
   for (int i = 0; i<6; i++){
       cout<< num[i]<<endl;
       
   }
    return 0;
}

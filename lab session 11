//1. Write a C program to count total number of even and odd elements in an array.

#include <iostream>
using namespace std;
int main() {
    int odd=0, even=0;
    int num[12]= {3,45,34,12,23,44,20,33,11,2,0,1};
    for(int i=0; i<12; i++){
        if( num[i]%2 == 0){
            even = even+1;
        } else if(num[i]%2 ==1){
            odd = odd+1;
        }
    }
    cout<<"Odd:"<< odd;
    cout<<"\nEven:"<< even;
    return 0;
}
//2. Write a C program to copy all elements from an array to another array.

#include <iostream>
using namespace std;
int main() {
    int x;
    int num[6]= {3,45,34,12,23,44};
    int numA[6]={};
    for(int i=0; i<6; i++){
       numA[i]=num[i];
    }
    for(int i =0; i<6; i++){
        cout<<numA[i]<<endl;
    }
   
    return 0;
}

